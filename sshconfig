CONFIGFILE="$HOME/.ssh/config"

if [ ! -f $CONFIGFILE ]
then
	mkdir -p $HOME/.ssh && touch $CONFIGFILE
fi
	
do_add_process() {
    if [[ "$#" -gt 6 || "$#" -lt 4 ]]; then
	echo "Usage : $0 $1 NAME USERNAME HOSTNAME [IdentityKey] [PORT]"
	exit 1
    fi

    name=$2
    username=$3
    hostname=$4
    id=$5
    port=${6-22}

    if [[ $(do_list_process | grep --count $name$) != 0 ]]; then
	echo "This name is already used. Try again with another name."
	exit 1
    fi
    
    if [ -n "$id" ]; then
	cat << EOB >> $CONFIGFILE
#begin $name
Host $name
	HostName $hostname
	User $username
	Port $port
	IdentityFile $id
#end $name
EOB
    else
	cat << EOB >> $CONFIGFILE
#begin $name
Host $name
	HostName $hostname
	User $username
	Port $port
#end $name
EOB
    fi
    exit 0
}

do_remove_process() {
    if [ "$#" != 2 ]; then
	echo "Usage : $0 $1 NAME"
	exit 1
    fi
    name=$2
    sed -ie "/^\#begin $name$/,/^\#end $name$/d" $CONFIGFILE
    exit 0
}

do_list_process() {
    grep "^Host" $CONFIGFILE | cut -f2- -d " "
    exit 0
}

do_show_usage() {
	echo -e "Add a new Host: $0 add/-a/a NAME USERNAME HOSTNAME [IdentityKey] [PORT] "
	echo -e "Remove a Host: $0 remove/-r/r  NAME"
	echo -e "List all exist hosts: $0 list/ls/show"
	echo -e "Print Version and info: $0 version/-v/v/-V"
	echo -e "Print this message and exit: $0 help/-h/h"
}

do_show_version() {
	echo "Create by Arash Shams <xsysxpert@gmail.com>" 
	echo "Version 1.1 Stable"
	echo "Fork me at Github <https://github.com/Ara4Sh/sshconfig>"
}

action=$1
case $action in
	add | -a | a)
	    do_add_process $@
	    ;;
	remove | -r | r)
	    do_remove_process $@
	    ;;
	list | ls | show)
	    do_list_process
	    ;;
	version | -v | v | -V)
	    do_show_version $@
	    ;;
	help | -h | h)
	    do_show_usage
	    ;;
	*)
	    do_show_usage $@
	    ;;
esac
